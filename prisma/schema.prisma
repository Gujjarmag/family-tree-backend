// 1. Prisma Client Generator
generator client {
  provider = "prisma-client-js"
}

// 2. Database Connection (PostgreSQL example)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trees Tree[]
}

model Tree {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  members Member[]
}

model Member {
  id         Int       @id @default(autoincrement())
  name       String
  dob        DateTime?
  photoUrl   String?
  gender     String? // optional, so user chooses freely
  showFemale Boolean   @default(true) // frontend toggle control

  bio   String?
  notes String?

  // One-to-one spouse relation
  spouseId Int?    @unique
  spouse   Member? @relation("SpouseRelation", fields: [spouseId], references: [id])
  spouseOf Member? @relation("SpouseRelation")

  treeId Int
  tree   Tree @relation(fields: [treeId], references: [id])

  parentId Int?
  parent   Member?  @relation("ParentChild", fields: [parentId], references: [id])
  children Member[] @relation("ParentChild")
}
